process_options();
open_program();
enable_all_breakpoints();
execute_program();
forever {
	wait_for_something();
	switch(what happened) {
		signal:
			log_it();
		exit:
			log_it();
			if (no_more_processes()) { exit(0); }
		syscall:
			log_it();
		sysret:
			log_it();
		breakpoint:
			libcall:
				enable_brk_on_libret();
				log_it();
			libret:
				log_it();
			singlestep:
	}
}
